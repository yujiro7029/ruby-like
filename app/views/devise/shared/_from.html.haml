- if flash[:notice]
  %p.flash= flash[:notice]
.container-fluid
  .from.from-box
    %h2.from__title  新規登録
    .from__boxs
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .from-boxs__box__titles__require 必須
        .from__boxs__field
          = f.text_field :name,placeholder:"ニックネーム",class:"from__boxs__field"
        .from-boxs__box__titles__require 必須
        .from__boxs__field
          = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"email",class:"from__boxs__field"
        .from-boxs__box__titles__require 必須
        .from__boxs__field
          = f.password_field :password, autocomplete: "current-password",placeholder:"password",class:"from__boxs__field"
        .from-boxs__box__titles__require 必須
        .from__boxs__field
          = f.password_field :password, autocomplete: "new-password",class:"from__boxs__field",placeholder:"もう一度パスワードを入力"
        .from-boxs__box__titles__any 任意
        .from__boxs__field
          .custom-file
            = f.file_field :image,class:"from__boxs__field",id: :customFile,class:"custom-file-input"
            %label.custom-file-label{"data-browse" => "参照", for: "customFile"} ファイル選択
          .image-box
            %img#img_prev{src:""}/
        .from__boxs__buttom
          = f.submit "新規登録",class:"from__boxs__buttom"
