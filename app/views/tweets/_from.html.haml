.container-fluid
  - if flash[:notice]
    %p= flash[:notice]
  .from-boxs
    = form_for @tweet do |f|
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title タイトルを入力 　
          %p.from-boxs__box__titles__require　必須
        = f.text_area :title,value: @tweet.title,placeholder: '60文字以内',class:"from-boxs__box__from"
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title ポイントを入力 　
          %p.from-boxs__box__titles__require　必須
        = f.text_area :point, value: @tweet.point,placeholder: '      ~~~ ~~~    で囲む',class:"from-boxs__box__from"
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title 問題文を入力 　
          %p.from-boxs__box__titles__require　必須
        = f.text_area :content,value: @tweet.content,placeholder: '      ~~~ ~~~    で囲む',class:"from-boxs__box__from"
      .from-boxs__box
        = f.submit "送信",class:"from-boxs__box__from"
  %h2.from-boxs__back 
    =link_to "戻る", root_path,class:"from-boxs__back"
  