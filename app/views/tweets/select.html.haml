-breadcrumb :tweet_edit,@tweet
.container-fluid
  .from-boxs
    = form_for @tweet do |f|
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title タイトルを入力
          %p.from-boxs__box__titles__require 必須
        = f.text_area :title,value: @tweet.title,placeholder:  "入力して下さい",class:"from-boxs__box__from"
        .from-boxs__box
          .from-boxs__box__titles
            %p.from-boxs__box__titles__title 問題文を入力
            %p.from-boxs__box__titles__require 必須
          = f.text_area :content,value:@tweet.content,placeholder: "入力して下さい",class:"from-boxs__box__from"
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title ポイントを入力
          %p.from-boxs__box__titles__require 必須
        = f.text_area :point, value: @tweet.point,placeholder: "入力して下さい",class:"from-boxs__box__from"
      %h2.from-boxs__title 選択問題の正解は一箇所のみで作成してください
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title 1:選択問題
          %p.from-boxs__box__titles__require 必須
        .from-boxs__box__titles__select
        =f.select :judge_problem1,[['不正解', 1], ['正解',2]],{},class:"form-control"
        = f.text_area :select_problem1,value: @tweet.content,placeholder: "入力して下さい",class:"from-boxs__box__from"
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title 2:選択問題
          %p.from-boxs__box__titles__require 必須
        .from-boxs__box__titles__select
        =f.select :judge_problem2,[['不正解', 1], ['正解',2]],{},class:"form-control"
        = f.text_area :select_problem2,value: @tweet.content,placeholder: "入力して下さい",class:"from-boxs__box__from"
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title 3:選択問題 
          %p.from-boxs__box__titles__require 必須
        .from-boxs__box__titles__select
        =f.select :judge_problem3,[['不正解', 1], ['正解',2]],{},class:"form-control"
        = f.text_area :select_problem3,value: @tweet.content,placeholder:  "入力して下さい",class:"from-boxs__box__from"
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title 4:選択問題 
          %p.from-boxs__box__titles__require 必須
        .from-boxs__box__titles__select
        =f.select :judge_problem4,[['不正解', 1], ['正解',2]],{},class:"form-control"
        = f.text_area :select_problem4,value: @tweet.content,placeholder:  "入力して下さい",class:"from-boxs__box__from"
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title 5:選択問題 
          %p.from-boxs__box__titles__require 必須
        .from-boxs__box__titles__select
        =f.select :judge_problem5,[['不正解', 1], ['正解',2]],{},class:"form-control"
        = f.text_area :select_problem5,value: @tweet.content,placeholder:  "入力して下さい",class:"from-boxs__box__from"
      #hidden
        .from-boxs__box
          = f.select :type_problem,[2]
      .from-boxs__box
        = f.submit "送信",class:"from-boxs__box__start-buttom"
  
  %h2.from-boxs__back 
    =link_to "戻る", new_tweet_path,class:"from-boxs__back"