.container-fluid
  .from-boxs
    .from-boxs__answer-boxs
      %p.from-boxs__answer-boxs__title 問題文を出力
      .from-boxs__answer-boxs__box aaa
    = form_for [@tweet,@answer] do |f|
      .from-boxs__box
        .from-boxs__box__titles
          %p.from-boxs__box__titles__title 回答を入力 　
          %p.from-boxs__box__titles__require　必須
        = f.text_area :content,placeholder: '回答を入力してください',class:"from-boxs__box__from"
      .from-boxs__box
        = f.submit "送信",class:"from-boxs__box__start-buttom"

  #hidden
    .from-boxs__answer-boxs 
      %p.from-boxs__answer-boxs__title 入力された回答  
      .from-boxs__answer-boxs__box aaa
    %h2.from-boxs__back 
      =link_to "戻る", new_tweet_path,class:"from-boxs__back"